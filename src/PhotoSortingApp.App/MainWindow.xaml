<Window x:Class="PhotoSortingApp.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PhotoSortingApp"
        Height="960"
        Width="1540"
        MinHeight="700"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF7F8FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="12,12,12,8"
                Padding="10"
                Background="White"
                BorderBrush="#FFD7DCE4"
                BorderThickness="1"
                CornerRadius="6">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left"
                            VerticalAlignment="Center">
                    <TextBlock Margin="0,0,8,0"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Text="Root Folder:" />
                    <ComboBox Width="420"
                              Margin="0,0,8,0"
                              DisplayMemberPath="DisplayName"
                              ItemsSource="{Binding ScanRoots}"
                              SelectedItem="{Binding SelectedScanRoot}" />
                    <Button Margin="0,0,8,0"
                            Padding="10,6"
                            Command="{Binding SelectFolderCommand}"
                            Content="Select Folder" />
                    <Button Margin="0,0,8,0"
                            Padding="10,6"
                            Command="{Binding RefreshScanRootsCommand}"
                            Content="Refresh Roots" />
                    <Button Margin="0,0,8,0"
                            Padding="10,6"
                            Command="{Binding RescanCommand}"
                            Content="Start Rescan" />
                    <Button Padding="10,6"
                            Command="{Binding CancelScanCommand}"
                            Content="Cancel Scan" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center">
                    <TextBlock Margin="0,0,8,0"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Text="Search:" />
                    <TextBox Width="280"
                             Margin="0,0,8,0"
                             VerticalContentAlignment="Center"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Margin="0,0,8,0"
                            Padding="10,6"
                            Command="{Binding ApplyFiltersCommand}"
                            Content="Apply Filters" />
                    <Button Padding="10,6"
                            Command="{Binding ClearFiltersCommand}"
                            Content="Clear" />
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1"
                Margin="12,0,12,8"
                Padding="8"
                Background="#FFEAF3FF"
                BorderBrush="#FFC5DAFF"
                BorderThickness="1"
                CornerRadius="6"
                Visibility="{Binding IsIndexing, Converter={StaticResource BoolToVisibilityConverter}}">
            <DockPanel LastChildFill="True">
                <ProgressBar DockPanel.Dock="Right"
                             Width="260"
                             Height="16"
                             Margin="8,0,0,0"
                             VerticalAlignment="Center"
                             Maximum="100"
                             Value="{Binding IndexingPercent, Mode=OneWay}" />
                <TextBlock VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Text="{Binding IndexingStatus}" />
            </DockPanel>
        </Border>

        <Grid Grid.Row="2"
              Margin="12,0,12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="390" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Margin="0,0,8,0"
                    Padding="8"
                    Background="White"
                    BorderBrush="#FFD7DCE4"
                    BorderThickness="1"
                    CornerRadius="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <CheckBox Margin="0,0,0,10"
                                  IsChecked="{Binding EnableDuplicateDetection, Mode=TwoWay}"
                                  Content="Enable duplicate detection (SHA-256 on scan)" />

                        <TextBlock FontWeight="SemiBold"
                                   Text="Smart Albums" />
                        <ListBox Height="210"
                                 Margin="0,4,0,10"
                                 DisplayMemberPath="DisplayName"
                                 ItemsSource="{Binding SmartAlbums}"
                                 SelectedItem="{Binding SelectedAlbum}" />

                        <TextBlock FontWeight="SemiBold"
                                   Text="Date Range" />
                        <Grid Margin="0,4,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <DatePicker Grid.Column="0"
                                        Margin="0,0,4,0"
                                        SelectedDate="{Binding FromDateLocal}" />
                            <DatePicker Grid.Column="1"
                                        Margin="4,0,0,0"
                                        SelectedDate="{Binding ToDateLocal}" />
                        </Grid>

                        <TextBlock FontWeight="SemiBold"
                                   Text="Date Source" />
                        <ComboBox Margin="0,4,0,8"
                                  DisplayMemberPath="DisplayName"
                                  ItemsSource="{Binding DateSourceOptions}"
                                  SelectedItem="{Binding SelectedDateSource}" />

                        <TextBlock FontWeight="SemiBold"
                                   Text="Folder Filter" />
                        <ComboBox Margin="0,4,0,10"
                                  DisplayMemberPath="DisplayName"
                                  ItemsSource="{Binding FolderFilters}"
                                  SelectedItem="{Binding SelectedFolderFilter}" />

                        <DockPanel Margin="0,0,0,4">
                            <TextBlock DockPanel.Dock="Left"
                                       FontWeight="SemiBold"
                                       Text="Duplicate Groups" />
                            <Button DockPanel.Dock="Right"
                                    Padding="8,2"
                                    Command="{Binding RefreshDuplicatesCommand}"
                                    Content="Refresh" />
                        </DockPanel>
                        <ListBox Height="180"
                                 Margin="0,4,0,0"
                                 DisplayMemberPath="DisplayName"
                                 ItemsSource="{Binding DuplicateGroups}"
                                 SelectedItem="{Binding SelectedDuplicateGroup}" />
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border Grid.Column="1"
                    Margin="0,0,8,0"
                    Padding="8"
                    Background="White"
                    BorderBrush="#FFD7DCE4"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Margin="0,0,0,8"
                               FontWeight="SemiBold"
                               Text="{Binding ResultsSummary}" />

                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <ListBox BorderThickness="0"
                                 ItemsSource="{Binding Photos}"
                                 SelectedItem="{Binding SelectedPhoto}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="170"
                                            Height="190"
                                            Margin="6"
                                            Padding="6"
                                            Background="#FFFDFDFE"
                                            BorderBrush="#FFE0E5ED"
                                            BorderThickness="1"
                                            CornerRadius="6">
                                        <StackPanel>
                                            <Border Height="120"
                                                    Background="#FFF0F3F7"
                                                    CornerRadius="4">
                                                <Image Source="{Binding ThumbnailImage}"
                                                       Stretch="UniformToFill" />
                                            </Border>
                                            <TextBlock Margin="0,6,0,0"
                                                       FontWeight="SemiBold"
                                                       Text="{Binding FileName}"
                                                       TextTrimming="CharacterEllipsis" />
                                            <TextBlock FontSize="11"
                                                       Foreground="#FF4A5568"
                                                       Text="{Binding DateTakenText}"
                                                       TextTrimming="CharacterEllipsis" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2"
                                Margin="0,8,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Padding="10,6"
                                Command="{Binding LoadMoreCommand}"
                                Content="Load More" />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="2"
                    Padding="8"
                    Background="White"
                    BorderBrush="#FFD7DCE4"
                    BorderThickness="1"
                    CornerRadius="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold"
                                   Text="Preview" />
                        <Border Height="240"
                                Margin="0,4,0,8"
                                Background="#FFF1F4F8"
                                CornerRadius="4">
                            <Image Source="{Binding PreviewImage}"
                                   Stretch="Uniform" />
                        </Border>

                        <TextBlock FontWeight="SemiBold"
                                   Text="Photo Details" />
                        <Grid Margin="0,4,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="File:" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding SelectedPhoto.FileName}" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Path:" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding SelectedPhoto.FullPath}"
                                       TextWrapping="Wrap" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="Date Taken:" />
                            <TextBlock Grid.Row="2"
                                       Grid.Column="1"
                                       Text="{Binding SelectedPhoto.DateTakenText}" />

                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       Text="Resolution:" />
                            <TextBlock Grid.Row="3"
                                       Grid.Column="1"
                                       Text="{Binding SelectedPhoto.ResolutionText}" />

                            <TextBlock Grid.Row="4"
                                       Grid.Column="0"
                                       Text="Camera:" />
                            <TextBlock Grid.Row="4"
                                       Grid.Column="1"
                                       Text="{Binding SelectedPhoto.Camera}" />

                            <TextBlock Grid.Row="5"
                                       Grid.Column="0"
                                       Text="SHA-256:" />
                            <TextBlock Grid.Row="5"
                                       Grid.Column="1"
                                       Text="{Binding SelectedPhoto.Asset.Sha256}"
                                       TextTrimming="CharacterEllipsis" />

                            <TextBlock Grid.Row="6"
                                       Grid.Column="0"
                                       Text="Notes:" />
                            <TextBlock Grid.Row="6"
                                       Grid.Column="1"
                                       Text="{Binding SelectedPhoto.Asset.Notes}" />
                        </Grid>

                        <Button Margin="0,0,0,12"
                                Padding="10,6"
                                Command="{Binding OpenFileLocationCommand}"
                                Content="Open File Location" />

                        <Separator Margin="0,0,0,10" />
                        <TextBlock FontWeight="SemiBold"
                                   Text="Organizer Plan (Dry-Run)" />
                        <TextBlock Margin="0,4,0,8"
                                   Foreground="#FF4A5568"
                                   TextWrapping="Wrap"
                                   Text="{Binding PlanSummary}" />
                        <StackPanel Margin="0,0,0,8"
                                    Orientation="Horizontal">
                            <Button Margin="0,0,8,0"
                                    Padding="10,6"
                                    Command="{Binding BuildOrganizerPlanCommand}"
                                    Content="Build Plan" />
                            <Button Padding="10,6"
                                    IsEnabled="False"
                                    ToolTip="Apply coming in v2"
                                    Content="Apply Plan" />
                        </StackPanel>
                        <DataGrid Height="240"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding OrganizerPreviewItems}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding SourcePath}"
                                                    Header="Source"
                                                    Width="*" />
                                <DataGridTextColumn Binding="{Binding DestinationPath}"
                                                    Header="Destination"
                                                    Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <Border Grid.Row="3"
                Margin="12,0,12,12"
                Padding="8"
                Background="White"
                BorderBrush="#FFD7DCE4"
                BorderThickness="1"
                CornerRadius="6">
            <TextBlock Text="{Binding StatusMessage}" />
        </Border>
    </Grid>
</Window>
